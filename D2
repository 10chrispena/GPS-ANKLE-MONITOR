import machine
import time, utime

# Define the GPIO pin
gpio_pin = 14  # Change this to the GPIO pin you are using

# Set up the GPIO pin as an input
gpio = machine.Pin(gpio_pin, machine.Pin.IN)

while True:
    # Read the state of the GPIO pin
    input_state = gpio.value()

    # Check if the input is high or low
    if input_state == 1:
        print("GPS ankle monitor secured")
    else:
        print("GPS ankle monitor has been tampered with!")

    # Wait for a short time to avoid continuous printing
    time.sleep(1)
